{{!-- burger logo --}}

<div class="container">
  <div class="jumbotron my-4" id="maindisplay" style="background-image:url(img/burger-img.jpg)">
    {{!-- first row that containts the add form --}}
    <div class="row">
      <div class="col-12">
        <div class="card mb-4 border-dark">
          <div class="card-header bg-dark text-light text-capitalize">
            Add a burger
          </div>
          <div class="card-body">
            <form role="form">
              <div class="form-row">
                <div class="form-group col">
                  <input class="form-control" id="name-input" type="text" placeholder="Enter a burger name">
                </div>
              </div>
              <button class="btn btn-outline-primary btn-lg btn-block" id="add-burger" type="submit">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      {{!-- to eat colum --}}
      <div class="col-4 d-flex justify-content-center flex-column">
        <ul class="list-group" id="listBurgers">
          {{#each burgers }}

          {{#unless devoured}}
          <button type="button" class="to-eat list-group-item list-group-item-action" data-id={{id}}>{{name}}</button>
          {{/unless}}
          {{/each}}
        </ul>
      </div>
      {{!-- input column --}}
      <div class="col-4 d-flex justify-content-center flex-column">
        {{!-- button devour on visible when there are some stuff in the left side --}}
        {{!-- <button class="btn btn-outline-success btn-lg btn-block" id="add-burger" type="submit">Devour</button>
        --}}
      </div>
      {{!-- eaaten column --}}
      <div class="col-4 d-flex justify-content-center flex-column">
        <ul class="list-group" id="listEatenBurgers">
          {{#each burgers }}
          {{#if devoured}}
          <button type="button" class="list-group-item list-group-item-action">{{name}}</button>
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>
<script src="assets/js/app.js"></script>