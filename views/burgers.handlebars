<!-- nav bar  -->
<nav class="navbar navbar-expand-lg navbar-light bg-primary">
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="./">Home<span class="sr-only">(current)</span></a>
      </li>

    </ul>
    <form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2" type="search" id="search-input" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit" id="search">Search</button>
    </form>
  </div>
</nav>
<!-- end nav bar-->
{{!-- burger logo --}}

<div class="container">
  <div class="jumbotron my-4" id="maindisplay" style="">
    {{!-- first row that containts the add form --}}
    <div class="row">
      <div class="col-12">
        <div class="card mb-4 border-dark">
          <div class="card-header bg-dark text-light text-capitalize">
            Add a burger
          </div>
          <div class="card-body">
            <form role="form">
              <div class="form-row">
                <div class="form-group col">
                  <input class="form-control" id="name-input" type="text" placeholder="Enter a burger name">
                </div>
              </div>
              <button class="btn btn-outline-primary btn-lg btn-block" id="add-burger" type="submit">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      {{!-- to eat colum --}}
      <div class="col-6 d-flex justify-content-center flex-column" id="non-eaten">
        <h3 class="text-light">Select the burger you would like to eat</h1>
          <ul class="list-group" id="listBurgers">
            {{#each burgers }}

            {{#unless devoured}}
            <button type="button" class="to-eat list-group-item list-group-item-action" data-toggle="modal" data-target="#confirm-modal"
              data-id={{id}} data-name='{{name}}'>{{name}}</button>
            {{/unless}}
            {{/each}}
          </ul>

      </div>
      {{!-- input column --}}
      {{!-- <div class="col-4 d-flex justify-content-center flex-column">
        -- button devour on visible when there are some stuff in the left side --}}
        {{!-- <button class="btn btn-outline-success btn-lg btn-block" id="add-burger" type="submit">Devour</button>

      </div> --}}

      {{!-- eaaten column --}}
      <div class="col-6 d-flex justify-content-center flex-column" id="eaten">
        <h3 class="text-light text-center">All eaten burgers</h1>
          <ul class="list-group" id="listEatenBurgers">
            {{#each burgers }}
            {{#if devoured}}
            <button type="button"  class="eaten list-group-item list-group-item-action" data-toggle="modal" data-target="#delete-modal"
              data-id={{id}} data-name='{{name}}'>{{name}}</button>
            {{/if}}
            {{/each}}
          </ul>
      </div>
    </div>
  </div>
</div>

<!-- begin update modal -->
<div class="modal fade" id="confirm-modal" tabindex="-1" role="dialog" aria-labelledby="Confirm-modal" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="confirm-modal-title">Confirm Burger Order</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="update-modal-body">
        <!-- modal body -->
        <span id="confirm-burger" class="text-center font-weight-bold"></span>
        <!-- end body -->
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-outline-primary" id="confirm-order" type="submit">Order</button>
      </div>
    </div>
  </div>
</div>
<!-- end update modal -->
<!-- begin delete modal -->
<div class="modal fade" id="delete-modal" tabindex="-1" role="dialog" aria-labelledby="Delete-modal" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="delete-modal-title">Delete a burger</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="delete-modal-body">
        <!-- modal body -->
        <div class="alert alert-danger" role="alert">
          <strong> Are you sure you want to permanently delete this burger from the list?</strong>
        </div>

        <!-- end body -->
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-outline-danger" id="confirm-delete">Delete</button>
      </div>
    </div>
  </div>
</div>
<!-- end deltete modal  /api/burgers-->

